
main
    form(class="ceateUser")
        fieldset
            legend Qui êtes vous ?
            label(for="first_name") Votre prénom
            input(type="text" name="first_name" id="first_name" value="" placeholder="Jane" title="Introduisez votre prénom")
            label(for="last_name") Votre nom de famille
            input(type="text" name="last_name" id="last_name" value="" placeholder="Doe" title="Introduisez votre nom de famillie")
        fieldset
            legend Votre compte
            label(for="username") Votre nom d'utilisateur
            input(type="text" name="username" id="username" value="" title="Introduisez votre nom d’utilisateur")
            label(for="email") Votre adresse mail
            input(type="email" name="email" id="email" value="" title="Introduisez votre adressse mail")
            a(id="showPassword" class="smallInfo" href="#" title="Afficher le mot de pass") Montrer le mot de passe
            label(for="password") Votre Mot de passes
            input(type="password" name="password" id="password" value="" title="Introduisez votre mot de pass")
            label(for="password1") Votre Mot de passes
            input(type="password" name="password1" id="password1" value="" title="Introduisez une seconde fois votre mot de passe")
        fieldset
            legend Sécurité
            label(for="question") Question de sécurité
            input(type="text" name="question" id="question" value="" title="Introduisez une question de sécurité")
            label(for="reponse") réponse à cette question
            input(type="text" name="reponse" id="reponse" value="" title="Introduisez une question de sécurité")
        input(type="submit" value="Soumettre l'inscription" class="btnVert")